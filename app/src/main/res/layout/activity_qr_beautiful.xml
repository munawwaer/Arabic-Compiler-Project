            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            android:elevation="4dp"/>

        <!-- Share Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShare"
