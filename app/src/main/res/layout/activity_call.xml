<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E">

    <!-- Call Status -->
    <TextView
        android:id="@+id/tvCallStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/call_connecting"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <!-- Remote IP Address -->
    <TextView
        android:id="@+id/tvRemoteAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="#CCCCCC"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvCallStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Call Duration -->
    <TextView
        android:id="@+id/tvCallDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvRemoteAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:visibility="gone" />

    <!-- Call Control Buttons Container -->
    <LinearLayout
        android:id="@+id/layoutCallControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/layoutIncomingCall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        android:visibility="gone">

        <!-- Mute Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMute"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="🔇"
            android:textSize="24sp"
            app:cornerRadius="32dp"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="24dp" />

        <!-- End Call Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEndCall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="📞"
            android:textSize="32sp"
            app:cornerRadius="40dp"
            android:backgroundTint="#FF4444"
            android:textColor="#FFFFFF"
            android:layout_marginHorizontal="24dp" />

        <!-- Speaker Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSpeaker"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="🔊"
            android:textSize="24sp"
            app:cornerRadius="32dp"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:layout_marginStart="24dp" />

    </LinearLayout>

    <!-- Incoming Call Controls -->
    <LinearLayout
        android:id="@+id/layoutIncomingCall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp">

        <!-- Decline Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDecline"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="❌"
            android:textSize="32sp"
            app:cornerRadius="40dp"
            android:backgroundTint="#FF4444"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="40dp" />

        <!-- Answer Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnswer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="📞"
            android:textSize="32sp"
            app:cornerRadius="40dp"
            android:backgroundTint="#44FF44"
            android:textColor="#FFFFFF"
            android:layout_marginStart="40dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>