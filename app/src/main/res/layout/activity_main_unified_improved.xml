<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Toolbar with Reduced Height -->
    <LinearLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:background="#2196F3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Call Button with Text -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCall"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="📞 مكالمة"
            android:textSize="11sp"
            app:cornerRadius="6dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="2dp"
            android:elevation="2dp" />

        <!-- QR Scanner Button with Text -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQrScanner"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="📷 مسح QR"
            android:textSize="11sp"
            app:cornerRadius="6dp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="2dp"
            android:elevation="2dp" />

        <!-- Search Button with Text -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSearch"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="🔍 بحث"
            android:textSize="11sp"
            app:cornerRadius="6dp"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="2dp"
            android:elevation="2dp" />

        <!-- Show QR Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShowQr"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="📱 عرض QR"
            android:textSize="11sp"
            app:cornerRadius="6dp"
            android:backgroundTint="#009688"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="2dp"
            android:elevation="2dp" />

        <!-- Connection Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/connectionStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="غير متصل"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginEnd="2dp" />

            <ImageView
                android:id="@+id/connectionStatusIndicator"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="#FF0000"
                android:layout_marginEnd="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Connection Info -->
    <LinearLayout
        android:id="@+id/connectionInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="#E3F2FD"
        app:layout_constraintTop_toBottomOf="@id/toolbarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/localIpText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IP المحلي: 192.168.1.100"
            android:textSize="11sp"
            android:textColor="#212121"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/remoteDeviceText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="الجهاز الآخر: --"
            android:textSize="11sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:gravity="end" />
    </LinearLayout>

    <!-- Floating Action Buttons in the Center -->
    <LinearLayout
        android:id="@+id/floatingActionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="@id/messagesRecyclerView"
        app:layout_constraintBottom_toBottomOf="@id/messagesRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Clear Chat Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearChat"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="🗑️"
            android:textSize="20sp"
            app:cornerRadius="28dp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:elevation="4dp" />

        <!-- Share QR Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShareQr"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="📤"
            android:textSize="20sp"
            app:cornerRadius="28dp"
            android:backgroundTint="#00BCD4"
            android:textColor="#FFFFFF"
            android:elevation="4dp" />
    </LinearLayout>

    <!-- Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/connectionInfoLayout"
        app:layout_constraintBottom_toTopOf="@id/inputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Message Input Area - Taller and Adjustable -->
    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="56dp"
            android:hint="اكتب رسالتك هنا..."
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:gravity="top|start" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="إرسال"
            android:layout_marginStart="6dp"
            app:cornerRadius="6dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:elevation="2dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>