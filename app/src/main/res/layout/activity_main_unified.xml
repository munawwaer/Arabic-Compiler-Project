<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Toolbar -->
    <LinearLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="#2196F3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Call Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCall"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="📞"
            android:textSize="20sp"
            app:cornerRadius="24dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#2196F3"
            android:layout_marginEnd="8dp" />

        <!-- QR Scanner Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQrScanner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="📷"
            android:textSize="20sp"
            app:cornerRadius="24dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#2196F3"
            android:layout_marginEnd="8dp" />

        <!-- Search Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSearch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="🔍"
            android:textSize="20sp"
            app:cornerRadius="24dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#2196F3"
            android:layout_marginEnd="8dp" />

        <!-- Settings Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="⚙️"
            android:textSize="20sp"
            app:cornerRadius="24dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#2196F3"
            android:layout_marginEnd="8dp" />

        <!-- Connection Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/connectionStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="غير متصل"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/connectionStatusIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#FF0000"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Connection Info -->
    <LinearLayout
        android:id="@+id/connectionInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#E3F2FD"
        app:layout_constraintTop_toBottomOf="@id/toolbarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/localIpText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IP المحلي: 192.168.1.100"
            android:textSize="12sp"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/remoteDeviceText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="الجهاز الآخر: --"
            android:textSize="12sp"
            android:textColor="#212121"
            android:gravity="end" />
    </LinearLayout>

    <!-- Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/connectionInfoLayout"
        app:layout_constraintBottom_toTopOf="@id/inputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Message Input Area -->
    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toTopOf="@id/bottomToolbarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="اكتب رسالتك هنا..."
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:background="@drawable/edit_text_background"
            android:padding="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إرسال"
            android:layout_marginStart="8dp"
            app:cornerRadius="4dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Bottom Toolbar -->
    <LinearLayout
        android:id="@+id/bottomToolbarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Clear Chat Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearChat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="🗑️"
            android:textSize="16sp"
            app:cornerRadius="24dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#F44336"
            android:layout_marginEnd="16dp" />

        <!-- Share QR Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShareQr"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="📤"
            android:textSize="16sp"
            app:cornerRadius="24dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#00BCD4"
            android:layout_marginEnd="16dp" />

        <!-- Settings Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBottomSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="⚙️"
            android:textSize="16sp"
            app:cornerRadius="24dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#607D8B" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>